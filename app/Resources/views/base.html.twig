<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        {{ sonata_seo_title() }}

        <!-- Meta -->
        {{ sonata_seo_metadatas() }}

        {% block stylesheets %}
             <!-- Fonts -->
            <link href='//fonts.googleapis.com/css?family=Nunito:300,400,600,700,800' rel='stylesheet' type='text/css'>
            <link href='//fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800' rel='stylesheet' type='text/css'>
            <!-- / Fonts -->

            <!-- Style Sheets -->
            <!-- Latest compiled and minified CSS -->
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/{{ bootstrap_version }}/css/bootstrap.min.css" />
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/{{ font_awesome_version }}/css/font-awesome.min.css">

            <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/metisMenu/{{ metis_menu_version }}/metisMenu.min.css">

            <!-- Custom css -->
            <link rel="stylesheet/less" type="text/css" href="{{ asset('bundles/appclover/less/custom.less') }}" />
            <!-- / Style Sheets -->

            <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
            <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
            <!--[if lt IE 9]>
              <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
              <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            <div id="wrapper">
                {% include 'AppCloverBundle:Default:side_nav_bar.html.twig' with {} %}

                <div class="container-wrapper">

                    {% include 'AppCloverBundle:Default:heading_nav_bar.html.twig' with {} %}

                    <div class='col-md-12'>
                        <h1 class='pull-left'>
                            {% block h1 %}
                                Clover
                            {% endblock h1 %}
                        </h1>

                        {{ wo_render_breadcrumbs() }}
                    </div>

                    <div class='wrapper'>
                        {% block content %}{% endblock %}
                    </div>

                    {% include 'AppCloverBundle:Default:footer.html.twig' with {} %}
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
             <!-- Main Javascript Libraries -->
            <script src="//code.jquery.com/jquery-2.1.4.min.js"></script>
            <script src="//code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
            <script src="//maxcdn.bootstrapcdn.com/bootstrap/{{ bootstrap_version }}/js/bootstrap.min.js"></script>

            <!-- Menu -->
            <script src="//cdnjs.cloudflare.com/ajax/libs/metisMenu/{{ metis_menu_version }}/metisMenu.min.js"></script>

            <!-- Loading Bar -->
            <script src="//cdnjs.cloudflare.com/ajax/libs/pace/1.0.2/pace.min.js"></script>

            <!-- Notification -->
            <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.2/toastr.min.js"></script>

            <!-- Custom and plugins javascript -->
            <script src="//cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js"></script>
            <script src="{{ asset('bundles/appclover/js/custom.js') }}"></script>
        {% endblock %}
    </body>
</html>